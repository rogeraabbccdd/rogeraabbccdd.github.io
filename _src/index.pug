  body
    #bg
      css-doodle.
        :doodle {
          @grid: 1x3 / 100vmax;
          position: absolute;
          top: 0; left: 0;
          z-index: 0;
          }

          @size: 100% 150%;
          position: absolute;

          background: @m(100, (
          linear-gradient(transparent, @p(
          #FFFDE1@repeat(2, @p([0-9a-f])),
          #FB3569@repeat(2, @p([0-9a-f]))
          ))
          @r(0%, 100%) @r(0%, 100%) /
          @r(1px) @r(23vmin)
          no-repeat
          ));

          will-change: transform;
          animation: f 30s linear calc(-20s / @size() * @i()) infinite;
          @keyframes f {
          from { transform: translateY(-100%) }
          to { transform: translateY(100%) }
        }
