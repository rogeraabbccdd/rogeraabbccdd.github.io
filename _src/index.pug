              .card.card-rotate
                .front.front-background(:style='{ "background-image": `url(./assets/img/works/${card.img})`}')
                  .card-body
                    h3.card-title {{ card.title }}
                    p.card-description(v-html='card.description')
                    .stats.text-center
                      button.btn.btn-success.btn-fill.btn-round.btn-rotate(type='button' name='button' @click='card.flip = true')
                        i.material-icons info
                        span  詳細資訊...
                .back.back-background(:style='{ "background-image": `url(./assets/img/works/${card.img})`}')
                  .card-body
                    h4.card-title 連結
                    .stats.text-center
                      a.btn.btn-just-icon(
                        v-for='link in card.links'
                        :class='["btn-"+link.type]'
                        :href='link.url'
                        target='_blank'
                      )
                        i.fab.fa-github(v-if='link.type === "github"')
                        i.fab.fa-youtube(v-else-if='link.type === "youtube"')
                        i.fab.fa-discord(v-else-if='link.type === "discord"')
                        img.icon-line(src="./assets/img/icons/line_icon01.png" v-else-if='link.type === "line"')
                        i.fas.fa-globe(v-else-if='link.type === "web"')
                        img.icon-am(src="./assets/img/icons/am.png" v-else-if='link.type === "am"')
                        img.icon-greasy(src="./assets/img/icons/greasy.png" v-else-if='link.type === "greasy"')
                        i.fas.fa-newspaper(v-else-if='link.type === "news"')
